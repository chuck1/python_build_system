
src_dir    = {{ src_dir }}
inc_dir    = {{ inc_dir }}
build_dir  = {{ build_dir }}
inc        = {{ inc_str }} 
define_str = {{ define_str }}
binary     = {{ binary_file }}
compiler_dir = {{ compiler_dir }}
master_config_dir = {{ master_config_dir }}
makefile          = {{ makefile }}
project_name      = {{ project_name }}
library_type      = static

depends_dir = $(build_dir)/depends
objects_dir = $(build_dir)/objects
process_dir = $(build_dir)/process

include $(compiler_dir)/color.mk

CC = g++

CFLAGS = -g -std=c++0x -Wno-format-security -fPIC -Wall -Werror -Wno-unused-local-typedefs -Wno-unknown-pragmas

CARGS = $(CFLAGS) $(inc) $(define_str)


.PHONY: all

all: $(binary)
	@bash -c "echo -e \"$(COLOR_BLUE)$(build_dir)$(COLOR_RESET)\""

MAKEDEPEND = $(CC) -c $(CARGS) -MM $< -MF $(depends_dir)/$*.cpp.d -MT $(objects_dir)/$*.cpp.o


include $(compiler_dir)/cpp_library.mk





$(binary): $(makefile)

$(binary): $(obj)
	@bash -c "echo -e \"$(COLOR_BLUE)build $@$(COLOR_RESET)\""
	@mkdir -p $(dir $@)
	@ar rcs $@ $(filter %.cpp.o, $^)


include $(compiler_dir)/clean.mk
include $(compiler_dir)/help.mk
include $(compiler_dir)/depend.mk




